<Base title={title} description="Download printable images for duas and more.">
  <section class="section">
    <div class="container">
      <h1 class="text-center font-normal">{title}</h1>
      <div class="row justify-center mt-10">
        {printables.map((image) => (
          <div class="col-12 md:col-4 lg:col-3 mb-5">
            <div class="card text-center">
              <img
                src={image.thumbnail}
                alt={image.title}
                class="w-full h-auto rounded"
              />
              <h4 class="mt-3">{image.title}</h4>
              <a
                href={image.url}
                download
                class="btn btn-primary mt-3"
              >
                Download
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Base>